</head>

<body id="body">


    <!-- singup form -->
    <section>

        <div class="formBox">
            <h1>Singup</h1>
            
            <form method="POST" accept="/signup" class="form" autocomplete="off">
                <div class="row">
                    <div class="col-sm-12 col-lg-6 col-md-6 inputFieldBox">
                        <label>First Name <span class="importantField" >*</span></label>
                        <input type="text" name="fname" placeholder="first name" required>
                    </div>
                    <div class="col-sm-12 col-lg-6 col-md-6 inputFieldBox">
                        <label>Last Name <span class="importantField">*</span></label>
                        <input type="text" name="lname" placeholder="first name" required>
                    </div>
                    <div class="col-sm-12 col-lg-6 col-md-6  inputFieldBox">
                        <label>Email <span class="importantField">*</span></label>
                        <input type="email" name="email" placeholder="email" required>
                        <%if(emailExist){%>
                            <span style="font-size: 13px; color: red;"><%=emailExist%></span>
                            <%}%>
                    </div>
                    <div class="col-sm-12 col-lg-6 col-md-6  inputFieldBox">
                        <label>Phone Number <span class="importantField">*</span></label>
                        <input type="number" name="phnNumber" placeholder="phone number" class="InputTypeNumber" required>
                    </div>
                    <div class="col-sm-12 col-lg-6 col-md-6  inputFieldBox">
                        <label>Password <span class="importantField">*</span></label>
                        <input type="password" name="password" placeholder="password" required>
                    </div>
                    <div class="col-sm-12 col-lg-6 col-md-6  inputFieldBox">
                        <label>Confirm Password <span class="importantField">*</span></label>
                        <input type="password" name="confirmPassword" placeholder="confrim password" required>
                    </div>
                </div>
                <%if(passworderr){%>
                    <span style="display: block; margin: auto;font-size: 13px ;color: red;">
                        <%=passworderr%>
                    </span>
                    <%}%>
                 
                        <div class="submitFormBtn">
                            <input type="submit" value="SIGN UP">
                        </div>

                        <p class="mt-2">if you already have an account then please <a href="/login">login</a></p>
            </form>
        </div>

    </section>
</body>

<!-- Jquery -->
